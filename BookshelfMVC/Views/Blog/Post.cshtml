@{
    BlogPostViewModel post = ViewData["Post"] as BlogPostViewModel;
}
<dialog class="p-12 bg-base">
    <span class="font-bold text-lg">Are you sure you want to delete this post?</span>
    <form method="post" asp-controller="Blog" asp-action="DeletePost">
        <div class="mt-6 flex max-w-[200px] mx-auto gap-4">
            <input type="hidden" name="id" value=@post.Id />
            <button type="submit" class="btn flex-1">Yes</button>
            <button type="button" id="modal-close-btn" class="btn flex-1 btn-error">Cancel</button>
    </form>
    </<div>
</dialog>
<div class="mx-auto max-w-[600px] my-8 flex flex-col">
    <div class="self-end grid grid-cols-2 gap-2">
        <button id="delete-post-btn" class="btn-ghost col-span-1 p-2 transition-all">Delete</button>
        <button id="edit-post-btn" class="btn-ghost col-span-1 p-2 transition-all">Edit</button>
    </div>
    <h1 class="text-3xl font-bold text-base-content">@post.Title</h1>
    <hr class="border-[1px] border-base-content my-4" />
    <div>
        <p class="text-sm">
            Date posted: @post.Created.ToString("dd-MM-yyyy")
        </p>
        <p class="text-sm">
            By @post.Author
        </p>
    </div>
    <article class="my-8 leading-loose">
            @post.Content
    </article>
</div>

        <script src="~/js/delete-blogpost-dialog.js"></script>