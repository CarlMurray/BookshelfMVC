@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="flex gap-4 justify-between">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="">
            <a class="" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @User.Identity?.Name!</a>
        </li>
        <li class="">
            <form class="" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button type="submit" class="">Logout</button>
            </form>
        </li>
    }
    else
    {
        <li class="">
            <a class="hidden rounded-md bg-gray-100 px-5 py-2.5 text-sm font-medium text-gray-900 transition hover:bg-gray-300 sm:block" asp-area="Identity" asp-page="/Account/Register">Register</a>
        </li>
        <li class="">
            <a class="block rounded-md bg-gray-900 px-5 py-2.5 text-sm font-medium text-white transition hover:bg-gray-600" asp-area="Identity" asp-page="/Account/Login">Login</a>
        </li>
    }
</ul>

